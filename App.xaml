<Application
    x:Class="HelloUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloUWP">
    <Application.Resources>
        <Style x:Key="FormHeading" TargetType="TextBlock">
            <Setter Property="Margin" Value="10 20 0 20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style x:Key="FormGroup" TargetType="StackPanel">
            <Setter Property="Margin" Value="0 5 0 5"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Margin" Value="10 0 30 5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>
    </Application.Resources>
</Application>
